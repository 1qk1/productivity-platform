{
  "name": "productivity-platform",
  "version": "1.5.1",
  "description": "A productivity platform to help you be more focused, productive and manage your time better.",
  "keywords": [
    "productivity",
    "pomodoro",
    "time",
    "management",
    "tracker",
    "focus",
    "open",
    "source",
    "oss"
  ],
  "scripts": {
    "install": "npm run install:client && npm run install:server",
    "install:client": "cd webclient && npm install",
    "install:server": "cd backend && npm install",
    "start": "cd backend && npm start",
    "dev": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd backend && npm run start:dev",
    "start:client": "cd webclient && npm start",
    "build": "cd webclient && npm run build && cd .. && node postbuild.js",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1qk1/productivity-platform.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1qk1/productivity-platform/issues"
  },
  "homepage": "https://github.com/1qk1/productivity-platform#readme",
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "engines": {
    "node": "10.3.0"
  }
}
